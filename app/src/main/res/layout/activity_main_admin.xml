<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="9dp"
        android:text="Amount of users:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/amountOfUsersTVADMIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amountOfUsersTVADMIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="593dp"
        android:text="TextView"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="518dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountOfUsersTVADMIN"
        app:singleSelection="true">


        <Button
            android:id="@+id/usersBTN"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Users" />
        />

        <Button
            android:id="@+id/vaccinationsBTN"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vaccinations" />
        />

        <Button
            android:id="@+id/vaccinationRecordsBTN"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="V. Records" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_marginTop="33dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonGroup">

        <Button
            android:id="@+id/adminInsertBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/adminDeleteBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textStyle="bold" />

        <Button
            android:id="@+id/adminUpdateBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textStyle="bold" />

        <Button
            android:id="@+id/adminGetAllBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get all"
            android:textStyle="bold" />

        <Button
            android:id="@+id/adminGetOneBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get one"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


