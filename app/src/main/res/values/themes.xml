<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LastChanceDB" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_cyan</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="dropDownBackgroundTint">@color/white</item>
    </style>

    <style name="Theme.LastChanceDB" parent="Base.Theme.LastChanceDB" />

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.FloatingActionButton</item>
    </style>

    <style name="ShapeAppearance.FloatingActionButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomCalendarDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/main_cyan</item>
        <item name="colorAccent">@color/main_pink</item>
        <item name="android:textColorTertiary">@color/main_cyan</item>
        <item name="colorControlActivated">@color/main_pink</item>
        <item name="colorControlHighlight">@color/main_yellow</item>
        <item name="android:windowBackground">@color/main_yellow</item>
        <item name="android:textColorSecondary">@color/main_cyan</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>